{
  "manifest_version": 2,
  "name": "Dark Mode Everywhere",
  "version": "1.0",
  "description": "Enables dark mode for all websites.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
